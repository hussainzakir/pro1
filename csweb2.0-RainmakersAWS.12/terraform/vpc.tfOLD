# VPC
module "csweb_app_vpc" {
  source  = "terraform-aws-modules/vpc/aws"
  version = "5.1.2"

  name = "${var.app-name}-${var.env}-app-vpc"
  cidr = "10.0.0.0/16"

  azs                     = ["us-east-1"]
  public_subnets          = ["10.0.1.0/24"]
  map_public_ip_on_launch = true

  tags = var.common_tags
}